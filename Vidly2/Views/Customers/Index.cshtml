@model Vidly2.ViewModels.IndexCustomersViewModel


@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

@if (Model.Customers.Count == 0)
{
    <p>We have no customers.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@customer.Name, "Details", "Customers", new
                        {
                            id = customer.Id
                        }, null)
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
