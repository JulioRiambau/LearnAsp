@using Vidly2.Models
@model List<Vidly2.Models.Customer>


@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We have no customers.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Customer customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@customer.Name, "Details", "Customers", new
                        {
                            id = customer.Id
                        }, null)
                    </td>
                    <td>@customer.MembershipType.DiscountRate</td>
                </tr>

            }
        </tbody>
    </table>
}
